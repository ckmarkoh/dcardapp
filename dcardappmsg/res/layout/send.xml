<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <EditText
        android:id="@+id/ReceiverEdit"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="To whom"
        android:inputType="text" />
    <requestFocus />

    <TextView
        android:id="@+id/ReceiverView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="To whom"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <Button android:text="Choose Friend" 
    android:id="@+id/ChooseFriendBut" 
    android:layout_height="wrap_content" 
    android:layout_width="match_parent">
	</Button>
    
    
    <EditText
        android:id="@+id/MsgEdit"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Message"
        android:inputType="text" >
    </EditText>

    <TextView
        android:id="@+id/SetTimeOutView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Time Out:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <SeekBar
        android:id="@+id/SetTimeOutBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
   	 	android:max="9"  
    	android:progress="4"   />
       <Button
           android:id="@+id/SendBut"
           android:layout_width="fill_parent"
           android:layout_height="50dp"
           android:text="Send message" />

       <Button
           android:id="@+id/BackBut"
           android:layout_width="fill_parent"
           android:layout_height="50dp"
           android:text="Back" />

</LinearLayout>
