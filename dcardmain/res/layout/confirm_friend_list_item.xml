<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:background="@drawable/white_list_item_1"
    >
    <TextView
        android:id="@+id/friendiIdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerVertical="true"
        android:text="ItemText"
        android:layout_marginLeft="10dp"
        android:textColor="#000000" >
    </TextView>

    <Button
        android:id="@+id/CFListItemPlus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:focusable="false"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/CFListItemMinus"
        android:background="@drawable/plus_button"
         />

    <Button
        android:id="@+id/CFListItemMinus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:focusable="false"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/minus_button"
         />
   
</RelativeLayout>

